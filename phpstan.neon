# phpstan.neon
# Minimal but sensible defaults. Adjust "paths" to your project layout.

parameters:
  level: max

  # Folders to analyze
  paths:
    - src
    # - app            # uncomment if you use /app instead of /src
    # - tests          # include if you want to analyze tests too

  # Common noise to skip
  excludePaths:
    - */vendor/*
    - */var/*
    - */bootstrap/cache/*
    - tests/**/Fixtures/*
    - tests/**/data/*

  # Faster, reproducible cache location (safe to commit)
  tmpDir: var/phpstan

  # Good safety nets
  reportUnmatchedIgnoredErrors: true
  checkMissingCallableSignature: true
  checkUninitializedProperties: true
